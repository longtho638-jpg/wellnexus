
    rules_version = '2';
    service cloud.firestore {
      match /databases/{database}/documents {
        match /evidence/{docId} {
          allow read: if true;
          allow write: if request.auth.token.role == 'admin';
        }
        match /commissions/{docId} {
          allow read, update: if request.auth != null && request.auth.token.role in ['admin','auditor'];
          allow create: if request.auth != null && request.auth.token.role in ['service','admin'];
        }
        match /idempotency_keys/{key} {
          allow read: if request.auth != null;
          allow write: if request.auth.token.role == 'service';
        }
        match /users/{uid} {
          allow read: if request.auth.uid == uid || request.auth.token.role in ['admin'];
          allow write: if false;
        }
        match /{document=**} { allow read, write: if false; }
      }
    }
    