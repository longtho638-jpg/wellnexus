rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }
    // Allow authenticated users to read partner data
    match /partners/{doc} {
      allow read: if request.auth != null;
    }
    // Allow service agents/admins to write
    match /(partners|metrics_daily)/{doc=**} {
        allow write: if request.auth.token.admin == true; // Example rule
    }
  }
}
