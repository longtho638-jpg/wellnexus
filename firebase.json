{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      // ... (existing routes)
      { "source": "/api/getMyMetrics", "function": "getMyMetrics" }, // Added new secured route
      { "source": "/api/partner/register", "function": "registerPartner" },
      { "source": "/api/partner/metrics", "function": "getPartnerMetrics" },
      { "source": "/api/metrics/summary", "function": "getMetricsSummary" },
      { "source": "/api/partner/approve", "function": "approvePartner" },
      { "source": "/api/getFirebaseConfig", "function": "getFirebaseConfig" },
      { "source": "/api/health", "function": "healthCheck" },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  }
}
